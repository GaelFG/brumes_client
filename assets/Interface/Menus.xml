<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- Menu d'acceuil -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="start" controller="fr.gembasher.burnzombies.gui.MenuController">
        <layer id="fond" backgroundColor="#0000" childLayout="center"> 
           <!-- <image filename="Interface/FondStartMenu.jpg"></image> -->
        </layer>
        <layer id="premierplan" backgroundColor="#0000" childLayout="center">
            <panel id="conteneurcentre" height="90%" width="80%" align="center" valign="center" childLayout="vertical" >
                <panel id="panelTitreJeu" height="25%" width="80%" align="center" backgroundColor="#0000" childLayout="center" visibleToMouse="false">
                    <effect>
                        <onStartScreen name="fade" start="#00" end="#ff" length="1200" startDelay="0" inherit="true"/>
                        <!-- <onEndScreen name="fade" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/> -->
                    </effect>
                    <text id="txtTitreJeu" color="#0aaf" font="Interface/Fonts/Test2Big.fnt"  text="Burn, Zombies ! Burn !" align="center" valign="center" />
                </panel>

                <panel id="panelStart" height="20%" width="35%" align="center"  backgroundColor="#f600" childLayout="center" visibleToMouse="true">
                    <interact onClick="startGame()"/>
                    <effect>
                        <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                        <onHover name="pulsate" scaleFactor="0.008" startColor="#0000" endColor="#063f" post="true"/> 
                    </effect>
                    <text id="txtStart" color="#0aaf" font="Interface/Fonts/Test2.fnt" text="Jouer" align="center" valign="center" />
                </panel>

                <panel id="panelOptions" height="20%" width="35%" align="center" backgroundColor="#f600" childLayout="center" visibleToMouse="true">
                    <interact onClick="goOptions()"/>
                    <effect>
                        <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                        <onHover name="pulsate" scaleFactor="0.008" startColor="#000" endColor="#ffff" post="true"/>
                    </effect>
                    <text id="txtOptions" color="#0aaf" font="Interface/Fonts/Test2.fnt" text="Options" align="center" valign="center" />
                </panel>
                
                <panel id="panelQuit" height="20%" width="35%" align="center" backgroundColor="#f600" childLayout="center" visibleToMouse="true">
                    <interact onClick="quit()"/>
                    <effect>
                        <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                        <onHover name="pulsate" scaleFactor="0.008" startColor="#000" endColor="#ffff" post="true"/>
                    </effect>
                    <text id="txtQuit" color="#0aaf" font="Interface/Fonts/Test2.fnt" text="Exit" align="center" valign="center" />
                </panel>
                
            </panel>   
        </layer>
    </screen>
</nifty>
